generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FunnelStep {
  id            String   @id @default(cuid())
  stepIndex     Int
  stepKey       String
  stepName      String
  totalViews    Int      @default(0)
  totalDropoffs Int      @default(0)
  totalCompletes Int     @default(0)
  conversionRate Float   @default(0)
  avgTimeSpent  Float    @default(0) // in seconds
  date          DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([stepIndex, date])
  @@index([date])
}

model FunnelEntry {
  id            String   @id @default(cuid())
  entryId       String   @unique
  flowId        String
  lastStepIndex Int
  lastStepKey   String
  completed     Boolean  @default(false)
  totalSteps    Int
  timeSpent     Int      // total time in seconds
  createdAt     DateTime
  updatedAt     DateTime

  @@index([createdAt])
  @@index([completed])
}
